<!--components/dialog/dialog.wxml-->
<view class="m-dialog-wrap {{ visible ? 'active' : '' }}">
  <view class="m-dialog">
    <view class="m-dialog-header">
      {{title}}
    </view>
    <view class="m-dialog-content">
      <slot name="a"></slot>
    </view>
    <view class="m-dialog-footer">
      <button size="mini" class="m-btn" bindtap="handleCancel">取消</button>
      <button size="mini" class="m-btn" bindtap="handleOk">确定</button>
    </view>
  </view>
</view>
