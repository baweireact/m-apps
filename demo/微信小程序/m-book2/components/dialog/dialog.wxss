/* components/dialog/dialog.wxss */
.m-dialog-wrap{display: none; position: fixed;top: 0;left: 0;right: 0;bottom: 0;background:rgba(0, 0, 0, 0.2);z-index: 999;}
.m-dialog-wrap.active{display: flex;}
.m-dialog{display: flex;flex-direction: column; margin: auto;min-width: 600rpx;min-height: 400rpx;background: #fff;border-radius: 10rpx;}
.m-dialog-header{height: 80rpx; line-height: 80rpx;padding: 0 0 0 10rpx;border-bottom: 1rpx solid #ddd;}
.m-dialog-content{flex:1;}
.m-dialog-footer{padding: 10rpx 0 0; height: 90rpx;line-height: 90rpx;text-align: right;border-top: 1rpx solid #ddd;}








